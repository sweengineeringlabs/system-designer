# System Designer Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Environment
APP_LOG_LEVEL=info

# Backend Configuration
APP_HOST=127.0.0.1
APP_PORT=3000
APP_CORS_ORIGINS=http://localhost:5173,http://localhost:1420
APP_MAX_BODY_SIZE=1048576
APP_RATE_LIMIT_PER_SECOND=10
APP_RATE_LIMIT_BURST=20

# Frontend Configuration (for Docker builds)
VITE_API_URL=http://localhost:3000

# Docker Configuration
COMPOSE_PROJECT_NAME=system-designer
